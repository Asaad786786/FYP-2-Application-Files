<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/primary_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Icon with primary color -->
        <ImageView
            android:id="@+id/start_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:src="@drawable/doctor_vet_svg_ic"
            android:layout_weight="1.5"
            android:padding="6dp"
            android:contentDescription="Icon"
            android:scaleType="centerInside"
            android:layout_marginEnd="16dp" />

        <!-- Text Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/doctorNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HMKCODE BLOG"
                android:layout_gravity="start"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <!-- Link -->
            <TextView
                android:id="@+id/docterHospitalTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hmkcode.com"
                android:layout_gravity="start"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Icon at the right end -->
        <ImageView
            android:id="@+id/callDoctorIc"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/call_svg_ic"
            app:tint="@color/white"
            android:contentDescription="Right Icon"
            android:tint="@color/black" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
